<!-- Your cards code -->
  <div class="container">
    <div class="row">
      <% data.flats.each do |owner, flat| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: url('<%= image_path flat.picture %>'); background-size:cover;">
          <div class="card-category"><%= flat.city %></div>
          <div class="card-description">
            <h2><%= flat.name %></h2>
            <p><%= flat.summary %></p>
          </div>
          <%= image_tag flat.owner_picture, class:"card-user avatar avatar-large" %>
          <%= link_to "#{owner}.html", "flats/#{owner}.html", class: "card-link" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

<!-- Your newsletter code -->
